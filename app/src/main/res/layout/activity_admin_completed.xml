<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AdminLeaveRecordActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="@color/admin_color"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp"
        android:text="Completed"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:stretchColumns="1"
        android:shrinkColumns="0">
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="No. "/>
            <TextView
                android:textStyle="bold"
                android:text="Leave Type "/>
            <TextView
                android:textStyle="bold"
                android:text="Approval Date "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="0022 "/>
            <TextView
                android:text="Annual Leave "/>
            <TextView
                android:text="7/12/2024 "/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Staff Name: "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="MS. CHAN MAN MAN "/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Leave Start: "/>
            <TextView
                android:textStyle="bold"
                android:text="Half Start: "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="12/12/2024 "/>
            <TextView
                android:text="1st Half "/>
        </TableRow>
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Leave Start: "/>
            <TextView
                android:textStyle="bold"
                android:text="Half Start: "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="15/12/2024"/>
            <TextView
                android:text="2nd Half"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Status"/>
            <TextView
                android:textStyle="bold"
                android:text="Day(s)"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Pending Approval"/>
            <TextView
                android:text="0"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Balance"/>
            <TextView
                android:text="3"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/light_blue"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Back"/>

</LinearLayout>
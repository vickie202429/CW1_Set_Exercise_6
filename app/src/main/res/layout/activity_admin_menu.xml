<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AdminMenuActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="@color/admin_color"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:text="Admin"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/mailImageView"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:src="@drawable/baseline_mail_outline_24" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/companyNoticeTextView"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Company Notice"
            android:textSize="20dp"
            android:background="@drawable/square_button_bg" />

        <TextView
            android:id="@+id/leaveRecordTextView"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Leave Record"
            android:textSize="20dp"
            android:background="@drawable/square_button_bg" />

        <TextView
            android:id="@+id/staffInformationTextView"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Staff Information"
            android:textSize="20dp"
            android:background="@drawable/square_button_bg" />

    </LinearLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Logout"/>
</LinearLayout>
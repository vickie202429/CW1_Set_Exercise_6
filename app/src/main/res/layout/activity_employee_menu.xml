<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EmployeeMenuActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="@color/employee_color"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:text="Employee"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:columnCount="2">

        <TextView
            android:id="@+id/companyNoticeTextView"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/baseline_notifications_24"
            android:drawableTint="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Company Notice"
            android:background="@drawable/square_button_bg" />
        <TextView
            android:id="@+id/leaveTextView"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/baseline_local_airport_24"
            android:drawableTint="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Leave"
            android:background="@drawable/square_button_bg" />
        <TextView
            android:id="@+id/taskListTextView"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/baseline_access_time_24"
            android:drawableTint="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Task List"
            android:background="@drawable/square_button_bg" />
        <TextView
            android:id="@+id/personalInfoTextView"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawableTint="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Personal Info"
            android:background="@drawable/square_button_bg" />

    </GridLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Logout"/>

</LinearLayout>
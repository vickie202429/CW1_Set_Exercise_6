<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AdminLeaveRecordActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner_bg"
        android:backgroundTint="@color/admin_color"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp"
        android:text="Pending"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:stretchColumns="1"
        android:shrinkColumns="0">
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="No. "/>
            <TextView
                android:textStyle="bold"
                android:text="Leave Type "/>
            <TextView
                android:textStyle="bold"
                android:text="Approval Date "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="0022 "/>
            <TextView
                android:text="Annual Leave "/>
            <TextView
                android:text="7/12/2024 "/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Staff Name: "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="MS. CHAN MAN MAN "/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Leave Start: "/>
            <TextView
                android:textStyle="bold"
                android:text="Half Start: "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="12/12/2024 "/>
            <TextView
                android:text="1st Half "/>
        </TableRow>
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Leave Start: "/>
            <TextView
                android:textStyle="bold"
                android:text="Half Start: "/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="15/12/2024"/>
            <TextView
                android:text="2nd Half"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textStyle="bold"
                android:text="Status"/>
            <TextView
                android:textStyle="bold"
                android:text="Day(s)"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Pending Approval"/>
            <TextView
                android:text="0"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Balance"/>
            <TextView
                android:text="3"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/approveImageView"
                android:layout_width="68dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_check_circle_outline_24"
                android:tint="@color/blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Approve"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/disapproveImageView"
                android:layout_width="68dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_cancel_24"
                android:tint="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="Disapprove"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/light_blue"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Back"/>

</LinearLayout>